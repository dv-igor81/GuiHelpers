<Window x:Class="Demo.WPF.GUI.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="5">
            <Button x:Name="IntHelper" Margin="2">Демонстрация IntHelper</Button>
            <Button x:Name="ThreadHelper" Margin="2">Демонстрация Thread</Button>
            <Button x:Name="CloseForm" Margin="2">Закрыть форму</Button>
            <CheckBox x:Name="HideMenu" Margin="2">Hide Menu Window</CheckBox>
        </StackPanel>
    </Grid>
</Window>
